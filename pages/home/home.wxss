/**index.wxss**/

image {
  width: 100%;
}

.homeContainer {
  width: 100%;
}

.homeContainer swiper image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}

.location {
  width: 150rpx;
  text-align: center;
  border-radius: 50rpx;
  border: 1rpx solid goldenrod;
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  color: goldenrod;
  font-size: 28rpx;
}

.homeScroll0 {
  white-space: nowrap;
  display: flex;
  height: 254rpx;
}

.homeScroll0 .scrollItem {
  width: 250rpx;
  display: inline-block;
  position: relative;
}
.scrollText{
width:100%;
display: block;
height:50rpx;
text-align:center;
position: absolute;
top: 250rpx;
z-index: 999;
}
.contentTitle{
  color: #CA6E03;
  font-weight: 600;
  margin: 26rpx 0 18rpx 20rpx;
  letter-spacing: 10rpx;
}














