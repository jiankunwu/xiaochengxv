<view class='orderContainer'>
<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">今天</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">昨天</view>  
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">过去</view>  
</view>  
  
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">  
   
    <swiper-item>  
      <view>今天</view>  
    </swiper-item>  
     
    <swiper-item>  
      <view>昨天</view>  
    </swiper-item>  

    <swiper-item>  
      <view>过去</view>  
    </swiper-item>  
</swiper>  
</view>